#include <iostream>
#include <vector>
using namespace std;

int main() {
    int T;
    cin >> T;

    while (T--) {
        int N;
        cin >> N;
        vector<int> A(N);
        for (int i = 0; i < N; i++) {
            cin >> A[i];
        }

        vector<int> count(N, 0);
        count[0] = 1;

        for (int i = 1; i < N; i++) {
            if (A[i] >= A[i - 1]) {
                count[i] = count[i - 1] + 1;
            } else {
                count[i] = 1;
            }
        }

        int total = 0;
        for (int i = 0; i < N; i++) {
            total += count[i];
        }

        cout << total << endl;
    }

    return 0;
}
