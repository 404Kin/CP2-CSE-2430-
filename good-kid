

#include <bits/stdc++.h>
using namespace std;
using ll=long long;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);

    int t;
    cin>>t;
    while(t--){

    int n;
    cin>>n;
    vector<int>razty(n);
    for(int i=0;i<n;i++)cin>>razty[i];

    auto mini=min_element(razty.begin(),razty.end());

    int mini_index=distance(razty.begin(),mini);

    razty[mini_index]++;

    ll product=1;

    for(int i=0;i<n;i++){
        product*=razty[i];
    }

    cout<<product<<endl;

    }
    return 0;
}
