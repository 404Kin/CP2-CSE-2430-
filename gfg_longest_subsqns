class Solution {
  public:
    int longestConsecutive(vector<int>& arr) {

        sort(arr.begin(),arr.end());

        int longest=1,restart=1;
   
        for(int i=1;i<arr.size();i++){
        if(arr[i]==arr[i-1]+1){
            restart++;
        }
        else{
            restart=1;
        }
        longest=max(longest,restart);
        }
        return longest;
        
    }
};
